<Project Sdk="MSBuild.Sdk.Extras">
  <PropertyGroup>
    <TargetFrameworks>net46;net47;netcoreapp3.0</TargetFrameworks>
    <AssemblyName>Orc.Skia</AssemblyName>
    <RootNamespace>Orc.Skia</RootNamespace>
    <DefaultLanguage>en-US</DefaultLanguage>
    <PackageId>Orc.Skia</PackageId>
    <PackageVersion>1.0.0-alpha0001</PackageVersion>
    <Description>Orc.Skia library.</Description>
    <PackageTags>orc;skia;skiasharp</PackageTags>
    <UseWpf>true</UseWpf>
  </PropertyGroup>

  <PropertyGroup>
    <!-- SonarQube requires a project guid -->
    <ProjectGuid>9A158429-3DC0-4EAE-99EF-82362CD4EAE0</ProjectGuid>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="costura32\libSkiaSharp.dll" />
    <None Remove="costura64\libSkiaSharp.dll" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="costura32\libSkiaSharp.dll" />
    <EmbeddedResource Include="costura64\libSkiaSharp.dll" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="Catel.Core" Version="5.10.0" />
    <PackageReference Include="Catel.Fody" Version="4.0.0" PrivateAssets="all" />
    <PackageReference Include="Costura.Fody" Version="4.0.0" />
    <PackageReference Include="Fody" Version="5.0.5" PrivateAssets="all">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="ModuleInit.Fody" Version="2.0.0" PrivateAssets="all" />
    <PackageReference Include="MethodTimer.Fody" Version="2.3.3" PrivateAssets="all" />
    <PackageReference Include="Obsolete.Fody" Version="4.4.3" PrivateAssets="all" />
    <PackageReference Include="SkiaSharp" Version="1.68.0" />
    <PackageReference Include="WpfAnalyzers" Version="2.2.0.2" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="NETStandard.Library" Version="2.0.1" />
  </ItemGroup>

  <Import Project="$(MSBuildProjectDirectory)\..\Directory.build.shared.explicit.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.build.shared.explicit.props')" />
  <Import Project="$(MSBuildProjectDirectory)\..\Directory.build.shared.mat.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.build.shared.mat.props')" />
</Project>